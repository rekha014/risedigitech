 <div id="breadcrumb">
    <div class="container"> 
      <div class="breadcrumb">              
        <li><a href="<%= root_path %>">Home</a></li>
        <li>Blog</li>     
      </div>    
    </div>  
  </div>
  
  <section id="blog" class="container">
        <div class="blog">
        
            <div class="row">
                 <div class="col-md-8">
                    <div class="blog-item">
                     <% @posts.each do |post| %>
                        <div class="row">
                            <div class="col-xs-12 col-sm-2">
                                <div class="entry-meta">
                                    <span id="publish_date"><%= post.created_at.strftime("%d %b %Y") %></span>
                                    <span><i class="fa fa-user"></i> <a href="#"><%= post.name %></a></span>
                                    <span><i class="fa fa-comment"></i> <a href="#">2 Comments</a></span>
                                    
                                </div>
                            </div>
                                
                            <div class="col-xs-12 col-sm-10 blog-content">
                                <% if post.image.present? %>
                                 <%= image_tag post.image.url(:medium) %>
                                  <% else %>
                                <a href="#"><img class="img-responsive img-blog" src="../assets/blog/blog1.jpg" width="100%" alt="" /></a>
                                <% end %>
                                <h4><%= post.title %></h4>
                                <p><%= post.description %></p>
                                <a class="btn btn-primary readmore">Read More <i class="fa fa-angle-right"></i></a>
                            </div>
                        </div>
                     <% end %> 
                    </div><!--/.blog-item-->
                   

             <%#= will_paginate @posts %>

             <div class="apple_pagination">
  
  <%= will_paginate @posts, :container => false %>

</div>


                        
                    
                </div><!--/.col-md-8-->
            

                <aside class="col-md-4">
                    <div class="widget search">
                        <form role="form">
                            <input type="text" class="form-control search_box" autocomplete="off" placeholder="Search Here">
                        </form>
                    </div><!--/.search-->

              <a href= "<%= new_post_path %>" class="btn btn-primary readmore"> New Post <i class="fa fa-plus"></i></a>  

              <a href= "<%= new_category_path %>" class="btn btn-primary readmore"> New Category <i class="fa fa-plus"></i></a>  

           
 

            
            <div class="widget categories">
                        <h3>Recent Comments</h3>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="single_comments">
                                    <img src="../assets/blog/avatar3.png" alt=""  />
                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do </p>
                                    <div class="entry-meta small muted">
                                        <span>By <a href="#">Alex</a></span>
                                    </div>
                                </div>
                                <div class="single_comments">
                                    <img src="../assets/blog/avatar3.png" alt=""  />
                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do </p>
                                    <div class="entry-meta small muted">
                                        <span>By <a href="#">Alex</a></span> 
                                    </div>
                                </div>
                                <div class="single_comments">
                                    <img src="../assets/blog/avatar3.png" alt=""  />
                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do </p>
                                    <div class="entry-meta small muted">
                                        <span>By <a href="#">Alex</a></span>
                                    </div>
                                </div>
                                
                            </div>
                        </div>                     
                    </div><!--/.recent comments-->
                     

                    <div class="widget categories">
                        <h3>Categories</h3>
                        <div class="row">
                            <div class="col-sm-6">
                               <% @categories.each do |category| %>
                                <ul class="blog_category">
                                    <li><a href="#"><%= category.name %> <span class="badge">04</span></a></li>
                                    
                                </ul>
                                <% end %>
                            </div>
                        </div>                     
                    </div><!--/.categories-->
            
            <div class="widget archieve">
                        <h3>Archieve</h3>
                        <div class="row">
                            <div class="col-sm-12">
                                <ul class="blog_archieve">
                                    <li><a href="#"><i class="fa fa-angle-double-right"></i> December 2015 <span class="pull-right">(97)</span></a></li>
                                    <li><a href="#"><i class="fa fa-angle-double-right"></i> November 2015 <span class="pull-right">(32)</span></a></li>
                                    <li><a href="#"><i class="fa fa-angle-double-right"></i> October 2015 <span class="pull-right">(19)</span></a></li>
                                    <li><a href="#"><i class="fa fa-angle-double-right"></i> September 2015 <span class="pull-right">(08)</span></a></li>
                                </ul>
                            </div>
                        </div>                     
                    </div><!--/.archieve-->
            
                    <div class="widget tags">
                        <h3>Tag Cloud</h3>
                        <ul class="tag-cloud">
                        <% @posts.each do |post |%>
                            <li><a class="btn btn-xs btn-primary" href="#"><%= post.tag %></a></li>
                        <% end %>
                            
                        </ul>
                    </div><!--/.tags-->
            
            <div class="widget blog_gallery">
                        <h3>Our Gallery</h3>
                        <ul class="sidebar-gallery">
                            <li><a href="#"><img src="../assets/blog/gallery1.png" alt="" /></a></li>
                            <li><a href="#"><img src="../assets/blog/gallery2.png" alt="" /></a></li>
